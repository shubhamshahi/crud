<h1><span style="color:orange;font-weight:bold">Edit Post</span></h1>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %><br>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p>
    <span style="color:white"><%= f.label :title %></span><br>
        <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>

    <p>
    <span style="color:white"> <%= f.label :body %></span><br>
        <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.submit({:class =>'btn btn-primary'}) %>
    </p>
<% end %>